author = {Zhao, Jun and Jayakumar, Anjali and Lee, Jong-Min},
title = {Bifunctional Sulfonated MoO3–ZrO2 Binary Oxide Catalysts for the One-Step Synthesis of 2,5-Diformylfuran from Fructose},
